- table_headers = %w[email name birth_date phone_number address franchise last_four_credit_card_numbers created_at]
%table.table
  %thead
    %tr
      - table_headers.each do |table_header|
        %th{:scope => "col"}
          = table_header.humanize
  %tbody
    - contacts_to_show.each do |contact|
      %tr
        %td= contact.email
        %td= contact.name
        %td= contact.birth_date
        %td= contact.phone_number
        %td= contact.address
        %td= contact.franchise
        %td= contact.last_four_credit_card_numbers
        %td= contact.created_at.strftime("%d-%m-%Y %H:%M")

.row.mb-1
  = link_to "Back", contact_files_path

.row
  = raw pagy_bootstrap_nav(@pagy)